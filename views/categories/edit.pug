extends ../layouts/header.pug
block content
  .container
    .row
      .col-12
        br 
        h2
          span.mt-100.mr-10 Edit Category
        h4
          span.mt-100.mr-10 ID: #{category.id}
        hr
        form#form(action="/categories/"+category.id, method="POST")
          .form-group
            label(for="name") Name
            input#name.form-control(type="text" name="name" value= category.name ? category.name : '')
          .form-group
            label(for="description") Description
            input#description.form-control(type="text" name= "description" value= category.description ? category.description : '')
          button(class="btn btn-primary ml-4") Update
  // Footer ==========================================================
  include ../layouts/footer.pug