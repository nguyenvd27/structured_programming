extends ../layouts/header.pug
block content
  .container
    .row
      .col-12
        h2
          span.mt-100.mr-10 Create Category
        hr.soft
        if errors
          each error in errors
            .alert.alert-danger= error
        form(action="/categories", method="POST")
          .form-group
            label(for="name") Name
            input#name.form-control(type="text" name="name" value= values ? values.name : '')
          .form-group
            label(for="description") Description
            input#description.form-control(type="text" name="description" value= values ? values.description : '')
          button(class="btn btn-success") Create
  // Footer ==========================================================
  include ../layouts/footer.pug